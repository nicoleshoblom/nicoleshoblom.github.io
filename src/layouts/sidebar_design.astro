---
const PageTitle = 'Home';
import Header from '../components/header.astro';
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{PageTitle}</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <style>
            @font-face {
                font-family: 'Lunar Blossom';
                src: url('/public/fonts/Lunar-Blossom.otf') format('opentype');
                font-weight: normal;
                font-style: normal;
            }
			body {
                display: flex;
                margin: 0;
                padding: 0;
                height: 100vh;
            }
			.main {
                display: flex;
                flex-grow: 1;
            }
            .sidebar {
                width: 25%;
                background-color: coral;
                padding: 20px;
                box-sizing: border-box;
                height: 100vh;
                position: fixed;
                top: 0;
                left: 0;
                overflow-y: auto;
            }
            .sidebar a {
                padding: 8px 8px 8px 16px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }
            .sidebar a:hover {
                background-color: #575757;
            }
            .content {
                margin-left: 25%;
                padding: 20px;
                box-sizing: border-box;
                width: 75%;
            }
            .header {
                display: flex;
                align-items: center;
                justify-content: center;
                color: black;
                padding: 10px;
                position: relative;
				width: 100%;
                box-sizing: border-box;
            }
            /* .hamburger {
                cursor: pointer;
                font-size: 25px;
                position: absolute;
                left: 10px;
            } */
            .title {
                text-align: center;
                flex-grow: 1;
                font-family: "Lunar Blossom", sans-serif;
                font-size: 35px;
                word-spacing: 5px;
                color: black;
            }
            .icons {
                position: absolute;
                right: 10px;
                display: flex;
                gap: 10px;
            }
            .icon {
                font-size: 25px;
                cursor: pointer;
                color: black;
                text-decoration: none;
            }
            .material-icons {
                font-size: 25px;
                vertical-align: middle;
                color: black; /* Ensure the icon is black */
            }
            .fa-linkedin {
                font-size: 25px;
                vertical-align: middle;
                color: black; /* Ensure the icon is black */
            }
        </style>
    </head>
    <body>
		<div class="main">
			<div class="sidebar">
                <a href="#home">Home</a>
                <a href="#services">Services</a>
                <a href="#clients">Clients</a>
                <a href="#contact">Contact</a>
            </div>
            <div class="content">
				<header class="header">
					<!-- <div class="hamburger">&#9776;</div> -->
					<div class="title">Nicole Shoblom</div>
					<div class="icons">
						<a href="mailto:nicole.shoblom@gmail.com" class="icon" title="nicole.shoblom@gmail.com">
							<span class="material-icons">email</span>
						</a>
						<a href="https://www.linkedin.com/in/navmendoza/" class="icon" title="LinkedIn Profile">
							<i class="fab fa-linkedin"></i>
						</a>
					</div>
				</header>
                <h1>A</h1>
                <!-- Add main content here -->
            </div>
		</div>
    </body>
</html>
