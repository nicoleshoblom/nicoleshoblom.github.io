            }
            .carousel-nav {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
                background-color: coral;
                padding: 2px 0 2px 0; /* Thinner vertical padding */
                position: sticky;
                top: 55px;
                z-index: 2000;
            }
            .carousel-nav a {
                pointer-events: none; /* Makes nav item unclickable */
                color: white;
                font-size: 14px;
                font-family: 'Poppins';
                text-align: center;
                min-width: 120px;
                text-decoration: none;
                padding: 0px 0 0px 0; /* Thinner link padding */
                background: none;
            }
            .carousel-nav button {
                background: none;
                border: none;
                color: white;
                font-size: 20px;
                cursor: pointer;
                padding: 0 4px; /* Thinner button padding */
                transition: color 0.2s;
            }
