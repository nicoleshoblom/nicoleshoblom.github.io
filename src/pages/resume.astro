            }
            @media (min-width: 768px){
                .layout {
                        flex-direction: row;
                        align-items: flex-start;
                        height: auto;
                    }
                .sidebar {
                    width: 300px; /* Fixed width for the sidebar on desktop */
                    border-right: 2px dotted coral;
                    border-bottom: none;
                    position: sticky;
                    top: 55px;
                    height: calc(100vh - 55px);
                    overflow-y: scroll;
                    padding-bottom: 50px;
                }
                .main-content{
                    flex: 1;
                    margin-right: 10px;
                    margin-left: 10px;
                }
            }
            @media(max-width: 768px) and (orientation: landscape){
                .layout {
                        flex-direction: row;
                        align-items: flex-start;
                        height: auto;
                    }
                .sidebar {
                    width: 300px; /* Fixed width for the sidebar on desktop */
                    border-right: 2px dotted coral;
                    border-bottom: none;
                    position: sticky;
                    top: 55px;
                    height: calc(100vh - 55px);
                    overflow-y: scroll;
                    padding-bottom: 50px;
                }
                .carousel {
                    position: relative;
                    overflow: hidden;
                    width: 100%;
                    max-width: 125px;
                    margin: 0 auto;
                }
                .main-content{
                    flex: 1;
                    margin-right: 10px;
                    margin-left: 10px;
                }
            }
            @media (max-width: 768px) {
                .carousel-nav {
                    position: sticky;
                    top: 60px; /* Change this value to where you want the nav bar to stick */
                }
            }
        </style>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const track = document.querySelector('.carousel-track');
                const images = Array.from(track.children);
                const prevButton = document.querySelector('.carousel-button.prev');
                const nextButton = document.querySelector('.carousel-button.next');
                let currentIndex = 0;

                function updateCarousel() {
                    const slideWidth = images[0].getBoundingClientRect().width;
                    track.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
                }

                nextButton.addEventListener('click', () => {
                    currentIndex = (currentIndex + 1) % images.length;
                    updateCarousel();
                });

                prevButton.addEventListener('click', () => {
                    currentIndex = (currentIndex - 1 + images.length) % images.length;
                    updateCarousel();
                });

                window.addEventListener('resize', updateCarousel);
                updateCarousel(); // Initialize carousel position
            });

        document.addEventListener('DOMContentLoaded', function () {
            const sections = document.querySelectorAll('.main-content > div[id]');
            const navItems = [
                { href: "#ds-experience", text: "Data Science Experience" },
                { href: "#webdev-experience", text: "Web Development Experience" },
                { href: "#teaching-experience", text: "Teaching Experience" },
                { href: "#other-experience", text: "Other Experience" },
                { href: "#education", text: "Education" },
            ];
            let currentNav = 0;
            const navLink = document.getElementById('nav-link');
            const prevBtn = document.querySelector('.nav-prev');
            const nextBtn = document.querySelector('.nav-next');

            function updateNav() {
                navLink.href = navItems[currentNav].href;
                navLink.textContent = navItems[currentNav].text;
            }

            function setActiveLinkAndNav() {
                let activeSectionIndex = 0;
                sections.forEach((section, idx) => {
                    const rect = section.getBoundingClientRect();
                    if (rect.top <= 100 && rect.bottom >= 100) {
                        activeSectionIndex = idx;
                    }
                });
                currentNav = activeSectionIndex;
                updateNav();
            }

            prevBtn.addEventListener('click', () => {
                currentNav = (currentNav - 1 + navItems.length) % navItems.length;
                updateNav();
                // Scroll to section
                document.querySelector(navItems[currentNav].href).scrollIntoView({ behavior: 'smooth' });
            });

            nextBtn.addEventListener('click', () => {
                currentNav = (currentNav + 1) % navItems.length;
                updateNav();
                // Scroll to section
                document.querySelector(navItems[currentNav].href).scrollIntoView({ behavior: 'smooth' });
            });

            window.addEventListener('scroll', setActiveLinkAndNav);
            updateNav();
            setActiveLinkAndNav();
        });
        </script>
</body>
