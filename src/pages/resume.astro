---

<BaseLayout PageTitle={PageTitle}>
    <body>
        <div class="layout">
            <div class="sidebar">
                <div class="carousel">
                    <div class="carousel-track">
                        <img src="/images/linkedin_pic.webp" alt="LinkedIn Picture" class="carousel-image" />
