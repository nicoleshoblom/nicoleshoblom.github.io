---
import BaseLayout from '../layouts/BaseLayout.astro'
const PageTitle = "Resume"
---

<BaseLayout PageTitle={PageTitle}>
    <body>
        <div class="layout">
            <div class="sidebar">
                <h2>Sidebar</h2>
                <p>Content for the sidebar goes here.</p>
            </div>
            <div class="main-content">
                <h1>Welcome to My Resume Page</h1>
                <p>Content for the main section goes here.</p>
            </div>
        </div>
        <style>
            .layout {
                display: flex;
                flex-direction: column;
                height: 100vh; /* Full viewport height */
            }
            .sidebar {
                background-color: coral;
                color: white;
                padding: 20px;
                width: 100%; /* Full width on mobile */
                text-align: center;
            }
            .main-content {
                flex: 1;
                padding: 20px;
            }
            @media (min-width: 768px) {
                .layout {
                    flex-direction: row;
                }
                .sidebar {
                    width: 250px; /* Fixed width for the sidebar on desktop */
                    text-align: left;
                }
                .main-content {
                    flex: 1;
                }
            }
        </style>
    </body>
</BaseLayout>