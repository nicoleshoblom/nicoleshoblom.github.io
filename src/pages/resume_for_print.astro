        <style>
            .layout{
                display: flex;
                flex-direction: column;
                height: 100%;
            }
            .carousel {
                position: relative;
                overflow: hidden;
                width: 100%;
                max-width: 200px;
                margin: 0 auto;
            }
            .carousel-track {
                display: flex;
                transition: transform 0.5s ease-in-out;
                width: 100%;
            }
            .carousel-image {
                min-width: 100%;
                height: auto;
                border-radius: 0px;
            }
            .carousel-controls {
                display: flex;
                justify-content: center;
                align-items: center;
                margin-top: 0px;
                gap: 10px;
                margin-bottom: 0px;
            }
            .carousel-button {
                background-color: whitesmoke;
                color: black;
                border: none;
                padding: 5px;
                cursor: pointer;
                z-index: 1;
            }
            .carousel-button:hover {
